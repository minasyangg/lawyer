// Prisma schema for Service table
// SQLite database

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Service {
  id          Int              @id @default(autoincrement())
  title       String
  description String
  extraInfo   String?
  details     ServiceDetails[]
}

model ServiceDetails {
  id          Int     @id @default(autoincrement())
  category    String
  services    String
  serviceId   Int?
  service     Service? @relation(fields: [serviceId], references: [id])
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
